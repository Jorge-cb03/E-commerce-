<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="ecommerce" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>com.ecommerce.domain.Cliente</class>
        <class>com.ecommerce.domain.InformacionFiscal</class>
        <class>com.ecommerce.domain.Articulo</class>
        <class>com.ecommerce.domain.Compra</class>
        <class>com.ecommerce.domain.CompraArticulo</class>
        <class>com.ecommerce.domain.CompraArticuloId</class>

        <properties>
            <!-- Conexión a Docker MySQL -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ecommerce_db?allowPublicKeyRetrieval=true&amp;useSSL=false&amp;serverTimezone=UTC"/>            
			<property name="jakarta.persistence.jdbc.user" value="dev_user"/>
            <property name="jakarta.persistence.jdbc.password" value="dev_pass_123"/>

            <!-- Configuración Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>